<UserControl x:Class="eco.Views.ChallengesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             Background="{DynamicResource MaterialDesignPaper}">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="16">
            <TextBlock Text="Челленджи" FontSize="28" FontWeight="Bold" Margin="0,0,0,16"/>
            <TextBlock Text="Участвуйте в вызовах и получайте дополнительные баллы" FontSize="16" Opacity="0.7" Margin="0,0,0,32"/>

            <!-- Активные челленджи -->
            <TextBlock Text="Активные челленджи" FontSize="20" FontWeight="Bold" Margin="0,0,0,16"/>
            <ItemsControl x:Name="ActiveChallengesItemsControl" Margin="0,0,0,32">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <materialDesign:Card Margin="0,0,0,16" Padding="24">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="200"/>
                                </Grid.ColumnDefinitions>

                                <!-- Иконка -->
                                <Border Grid.Column="0" Width="60" Height="60" CornerRadius="30" 
                                       Background="{DynamicResource PrimaryHueLightBrush}">
                                    <materialDesign:PackIcon Kind="Star" Width="32" Height="32" 
                                                           HorizontalAlignment="Center" VerticalAlignment="Center"
                                                           Foreground="White"/>
                                </Border>

                                <!-- Информация о челлендже -->
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="{Binding Challenge.Title}" FontSize="18" FontWeight="Bold" Margin="0,0,0,8"/>
                                    <TextBlock Text="{Binding Challenge.Description}" TextWrapping="Wrap" Opacity="0.8" Margin="0,0,0,8"/>
                                    
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                        <materialDesign:PackIcon Kind="Target" Width="16" Height="16" VerticalAlignment="Center" Margin="0,0,8,0" Opacity="0.7"/>
                                        <TextBlock Text="Цель:" VerticalAlignment="Center" Margin="0,0,4,0" Opacity="0.7"/>
                                        <TextBlock Text="{Binding Challenge.TargetValue}" VerticalAlignment="Center" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding Challenge.MaterialType}" VerticalAlignment="Center" Margin="4,0,0,0"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                        <materialDesign:PackIcon Kind="Calendar" Width="16" Height="16" VerticalAlignment="Center" Margin="0,0,8,0" Opacity="0.7"/>
                                        <TextBlock Text="До:" VerticalAlignment="Center" Margin="0,0,4,0" Opacity="0.7"/>
                                        <TextBlock Text="{Binding Challenge.EndDate, StringFormat=dd.MM.yyyy}" VerticalAlignment="Center"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Star" Width="16" Height="16" VerticalAlignment="Center" Margin="0,0,8,0" Opacity="0.7"/>
                                        <TextBlock Text="Награда:" VerticalAlignment="Center" Margin="0,0,4,0" Opacity="0.7"/>
                                        <TextBlock Text="{Binding Challenge.RewardPoints}" VerticalAlignment="Center" FontWeight="Bold" 
                                                  Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                        <TextBlock Text="баллов" VerticalAlignment="Center" Margin="4,0,0,0"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Прогресс -->
                                <StackPanel Grid.Column="4">
                                    <TextBlock Text="Прогресс" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                    
                                    <Border Background="{DynamicResource MaterialDesignCardBackground}" 
                                           CornerRadius="8" Padding="16">
                                        <StackPanel>
                                            <TextBlock Text="{Binding ProgressText}" HorizontalAlignment="Center" 
                                                      FontSize="16" FontWeight="Bold" Margin="0,0,0,8"/>
                                            
                                            <ProgressBar Value="{Binding Progress}" Maximum="100" 
                                                        Height="8" Margin="0,0,0,8"/>
                                            
                                            <TextBlock Text="{Binding Progress, StringFormat=F0}" 
                                                      HorizontalAlignment="Center" Opacity="0.7"/>
                                            
                                            <Button Content="{Binding IsCompleted, Converter={StaticResource ChallengeStatusConverter}}" 
                                                   IsEnabled="{Binding CanJoin}"
                                                   Style="{DynamicResource MaterialDesignRaisedButton}"
                                                   Click="JoinChallengeButton_Click"
                                                   Tag="{Binding}"
                                                   Margin="0,8,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </Grid>
                        </materialDesign:Card>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Завершенные челленджи -->
            <TextBlock Text="Завершенные челленджи" FontSize="20" FontWeight="Bold" Margin="0,0,0,16"/>
            <ItemsControl x:Name="CompletedChallengesItemsControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <materialDesign:Card Margin="0,0,0,16" Padding="20" Opacity="0.8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <materialDesign:PackIcon Grid.Column="0" Kind="CheckCircle" 
                                                       Width="32" Height="32" 
                                                       Foreground="Green" VerticalAlignment="Center"/>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="{Binding Challenge.Title}" FontWeight="Bold" Margin="0,0,0,4"/>
                                    <TextBlock Text="{Binding Challenge.Description}" Opacity="0.7"/>
                                </StackPanel>

                                <StackPanel Grid.Column="3" HorizontalAlignment="Right">
                                    <TextBlock Text="{Binding CompletionDate, StringFormat='Завершено: dd.MM.yyyy'}" 
                                              Opacity="0.7" HorizontalAlignment="Right"/>
                                    <TextBlock Text="{Binding Challenge.RewardPoints, StringFormat='+{0} баллов'}" 
                                              FontWeight="Bold" HorizontalAlignment="Right"
                                              Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                </StackPanel>
                            </Grid>
                        </materialDesign:Card>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Сообщение, если нет челленджей -->
            <materialDesign:Card x:Name="NoChallengesCard" Padding="32" Visibility="Collapsed">
                <StackPanel HorizontalAlignment="Center">
                    <materialDesign:PackIcon Kind="StarOutline" Width="64" Height="64" 
                                           HorizontalAlignment="Center" Opacity="0.5" Margin="0,0,0,16"/>
                    <TextBlock Text="Нет доступных челленджей" FontSize="18" FontWeight="Bold" 
                              HorizontalAlignment="Center" Margin="0,0,0,8"/>
                    <TextBlock Text="Новые вызовы появятся скоро!" 
                              HorizontalAlignment="Center" Opacity="0.7"/>
                </StackPanel>
            </materialDesign:Card>
        </StackPanel>
    </ScrollViewer>
</UserControl>
