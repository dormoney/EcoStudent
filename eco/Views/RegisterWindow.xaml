<Window x:Class="eco.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Grid>
        <materialDesign:Card Margin="16" Padding="32">
            <StackPanel>

                <TextBlock Text="Регистрация " FontSize="24" FontWeight="Bold" 
                          HorizontalAlignment="Center" Margin="0,0,0,32"/>

                <TextBox x:Name="FullNameTextBox" 
                        materialDesign:HintAssist.Hint="ФИО"
                        Style="{DynamicResource MaterialDesignFloatingHintTextBox}"
                        GotFocus="FullNameTextBox_GotFocus"
                        Margin="0,0,0,16"/>

                <TextBox x:Name="EmailTextBox" 
                        materialDesign:HintAssist.Hint="Email"
                        Style="{DynamicResource MaterialDesignFloatingHintTextBox}"
                        GotFocus="EmailTextBox_GotFocus"
                        Margin="0,0,0,16"/>

                <PasswordBox x:Name="PasswordBox" 
                            materialDesign:HintAssist.Hint="Пароль"
                            Style="{DynamicResource MaterialDesignFloatingHintPasswordBox}"
                            GotFocus="PasswordBox_GotFocus"
                            Margin="0,0,0,16"/>

                <PasswordBox x:Name="ConfirmPasswordBox" 
                            materialDesign:HintAssist.Hint="Подтвердите пароль"
                            Style="{DynamicResource MaterialDesignFloatingHintPasswordBox}"
                            GotFocus="ConfirmPasswordBox_GotFocus"
                            Margin="0,0,0,16"/>

                <TextBox x:Name="GroupTextBox"
                        materialDesign:HintAssist.Hint="Группа (необязательно)"
                        Style="{DynamicResource MaterialDesignFloatingHintTextBox}"
                        GotFocus="GroupTextBox_GotFocus"
                        Margin="0,0,0,24"/>

                <Button x:Name="RegisterButton" Content="Зарегистрироваться" 
                       Style="{DynamicResource MaterialDesignRaisedButton}"
                       Click="RegisterButton_Click"
                       IsDefault="True"
                       Margin="0,0,0,16"/>

                <Button x:Name="BackButton" Content="Уже есть аккаунт? Войти" 
                       Style="{DynamicResource MaterialDesignOutlinedButton}"
                       Click="BackButton_Click"/>

                <TextBlock x:Name="ErrorMessageTextBlock" 
                          Text="" 
                          Foreground="Red" 
                          HorizontalAlignment="Center" 
                          Margin="0,16,0,0"
                          Visibility="Collapsed"/>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</Window>
